
<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Blog Config</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                               <settings.blog.max>
                                   <TCEforms>
                                       <label>Max. Anzahl Blogs</label>
                                       <config>
                                           <type>input</type>
                                           <size>2</size>
                                           <eval>int</eval>
                                           <default>10</default>
                                       </config>
                                   </TCEforms>
                               </settings.blog.max>

                               <switchableControllerActions>
                                   <TCEforms>
                                       <label>Type</label>
                                       <config>
                                           <type>select</type>
                                           <items type="array">
                                               <numIndex index="0" type="array">
                                                   <numIndex index="0">Lesend</numIndex>
                                                   <numIndex index="1">Blog->list;Blog->show</numIndex>
                                               </numIndex>
                                               <numIndex index="1" type="array">
                                                   <numIndex index="0">Schreibend</numIndex>
                                                   <numIndex index="1">Blog->list;Blog->show;
                                                                        Blog->deleteConfirm;Blog->delete;
                                                                        Blog->addForm; Blog->add;
                                                                        Blog->update; Blog->updateForm;

                                                   </numIndex>
                                               </numIndex>
                                           </items>
                                       </config>
                                   </TCEforms>
                               </switchableControllerActions>

                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>